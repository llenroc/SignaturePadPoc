<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignaturePadPoc.Views.MainPage"
             Title="CES Poc">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sync" Clicked="MenuItem_OnClicked" />
    </ContentPage.ToolbarItems>

    <ListView x:Name="ListView" VerticalOptions="FillAndExpand" ItemSelected="ListView_OnItemSelected" IsPullToRefreshEnabled="True">
        <ListView.Header>
            <Button Text="Add New Record" Clicked="Button_OnClicked" BackgroundColor="SlateGray" TextColor="White"/>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Title}" Detail="{Binding SubTitle}" />
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>

</ContentPage>